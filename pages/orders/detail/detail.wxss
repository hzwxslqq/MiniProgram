/* Order detail page styles */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 28rpx;
  color: #666;
}

.order-detail {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-header {
  background: white;
  padding: 30rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  text-transform: capitalize;
}

.order-status.pending {
  background-color: #fff3cd;
  color: #856404;
}

.order-status.paid {
  background-color: #d1ecf1;
  color: #0c5460;
}

.order-status.shipped {
  background-color: #cce5ff;
  color: #004085;
}

.order-status.delivered {
  background-color: #d4edda;
  color: #155724;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.order-items-section,
.order-summary-section,
.shipping-section,
.tracking-section {
  background: white;
  padding: 30rpx;
  border-radius: 10rpx;
}

.order-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.order-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.item-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.item-name {
  font-size: 26rpx;
  color: #333;
}

.item-price {
  font-size: 24rpx;
  color: #666;
}

.item-total {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  font-size: 26rpx;
  color: #666;
}

.summary-row.total {
  font-weight: bold;
  font-size: 30rpx;
  color: #333;
  border-top: 1rpx solid #eee;
  margin-top: 10rpx;
  padding-top: 20rpx;
}

.address-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.address-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.address-phone {
  font-size: 24rpx;
  color: #666;
}

.address-line {
  font-size: 24rpx;
  color: #666;
}

.tracking-details {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tracking-row {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.tracking-number-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tracking-number {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

.copy-btn {
  background-color: #007aff;
  color: white;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}

.order-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-button {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-weight: bold;
  border: none;
}

.pay-btn {
  background-color: #ff9500;
  color: white;
}

.track-btn {
  background-color: #007aff;
  color: white;
}

.error-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 28rpx;
  color: #666;
}