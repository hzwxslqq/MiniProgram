/* Payment Success page styles */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.payment-success-header {
  text-align: center;
  padding: 50rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.success-icon {
  font-size: 120rpx;
  color: #07c160;
  margin-bottom: 30rpx;
  font-weight: bold;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.success-message {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.order-info {
  padding: 20rpx 0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-value {
  font-weight: bold;
  color: #333;
}

.total-amount {
  color: #e64340 !important;
  font-size: 32rpx !important;
}

.status-paid {
  color: #07c160 !important;
}

.order-items {
  margin-top: 30rpx;
}

.item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.item:last-child {
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.item-details {
  flex: 1;
}

.item-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.item-quantity {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.item-price {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.footer {
  padding: 30rpx 0;
  text-align: center;
}

.action-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.view-details-btn {
  background-color: #1aad19;
  color: #fff;
  border: none;
}

.orders-btn {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ddd;
}

.home-btn {
  background-color: #e64340;
  color: #fff;
  border: none;
}

.loading-container {
  text-align: center;
  padding: 50rpx 0;
}

.loading-container text {
  display: block;
  margin-top: 20rpx;
  color: #666;
}