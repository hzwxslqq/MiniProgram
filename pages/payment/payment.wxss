/* Payment page styles */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.payment-header {
  text-align: center;
  padding: 30rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.loading-container {
  text-align: center;
  padding: 50rpx 0;
}

.loading-container text {
  display: block;
  margin-top: 20rpx;
  color: #666;
}

.section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.order-number {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.item:last-child {
  border-bottom: none;
}

.item-info {
  flex: 1;
}

.item-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.item-quantity {
  font-size: 24rpx;
  color: #999;
}

.item-price {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.order-totals {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.total-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.total-row text:first-child {
  color: #666;
}

.total-row text:last-child {
  color: #333;
}

.grand-total {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid #eee;
}

.total-amount {
  color: #ff4d4f !important;
  font-size: 36rpx !important;
}

.payment-method {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
}

.payment-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.pay-btn {
  width: 100%;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  padding: 25rpx;
}

.cancel-btn {
  width: 100%;
  font-size: 28rpx;
  padding: 20rpx;
}

.section button {
  width: 100%;
  height: 80rpx;
  background-color: #1aad19;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.section button:last-child {
  margin-bottom: 0;
}

.terms-section text {
  font-size: 28rpx;
  color: #333;
  cursor: pointer;
}

.terms-section {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  cursor: pointer;
  user-select: none;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 20rpx 0;
}

.terms-section checkbox {
  margin-right: 20rpx;
  position: relative;
  z-index: 1;
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  flex-shrink: 0;
}

.no-order {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
}