.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 30rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.controls {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.run-btn, .clear-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  border: none;
}

.run-btn {
  background-color: #07c160;
  color: white;
}

.clear-btn {
  background-color: #ff9500;
  color: white;
}

.run-btn[disabled], .clear-btn[disabled] {
  background-color: #ccc;
}

.results {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.no-results {
  padding: 50rpx;
  text-align: center;
  color: #999;
}

.results-list {
  max-height: 70vh;
  overflow-y: auto;
}

.result-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item.success {
  background-color: #f6ffed;
}

.result-item.fail {
  background-color: #fff2f0;
}

.result-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.result-status {
  font-weight: bold;
  font-size: 24rpx;
}

.result-status.success {
  color: #52c41a;
}

.result-status.fail {
  color: #ff4d4f;
}

.result-time {
  font-size: 20rpx;
  color: #999;
}

.result-description {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.result-details {
  font-size: 24rpx;
  color: #666;
  display: block;
}