/* Cart page styles */
.cart-header {
  padding: 20rpx 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #eee;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.edit-button {
  color: #07c160;
  font-size: 28rpx;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-cart-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-cart-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 50rpx;
}

.continue-shopping-btn {
  width: 80%;
}

.cart-content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.cart-items {
  flex: 1;
  padding: 20rpx;
}

.cart-item {
  display: flex;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.item-selection {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.item-details {
  display: flex;
  flex: 1;
}

.item-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.item-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.item-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
}

.quantity-control {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  font-size: 32rpx;
  padding: 0;
  background-color: #f5f5f5;
  border: none;
  border-radius: 8rpx;
}

.quantity {
  margin: 0 20rpx;
  font-size: 28rpx;
}

.remove-btn {
  background-color: #ff4d4f;
  color: white;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border: none;
  border-radius: 8rpx;
}

.cart-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: white;
  border-top: 1rpx solid #eee;
}

.select-all {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.select-all icon {
  margin-right: 10rpx;
}

.checkout-section {
  display: flex;
  align-items: center;
}

.total-price {
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.checkout-btn {
  font-size: 28rpx;
  padding: 15rpx 30rpx;
}