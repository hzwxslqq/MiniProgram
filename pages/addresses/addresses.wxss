.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #007aff;
  color: white;
  border: none;
  padding: 15rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 50rpx;
  color: #666;
}

.empty {
  text-align: center;
  padding: 100rpx 50rpx;
  color: #999;
}

.address-item {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.address-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.default-tag {
  background-color: #007aff;
  color: white;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
}

.address-details {
  margin-bottom: 20rpx;
}

.address-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.address-actions {
  display: flex;
  justify-content: flex-start;
}

.action-btn {
  margin-right: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ddd;
  background-color: #fff;
}

.edit-btn {
  color: #007aff;
  border-color: #007aff;
}

.delete-btn {
  color: #ff3b30;
  border-color: #ff3b30;
}

.default-btn {
  color: #4cd964;
  border-color: #4cd964;
}

.form-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.form-container {
  background-color: #fff;
  width: 90%;
  max-width: 600rpx;
  border-radius: 10rpx;
  max-height: 90vh;
  overflow-y: auto;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  background: none;
  border: none;
  font-size: 36rpx;
  color: #999;
  padding: 0;
  width: auto;
  height: auto;
}

.address-form {
  padding: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.checkbox-group {
  display: flex;
  align-items: center;
}

.form-checkbox {
  margin-right: 15rpx;
}

.checkbox-label {
  font-size: 28rpx;
  color: #333;
}

.submit-btn {
  width: 100%;
  background-color: #007aff;
  color: white;
  border: none;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}