<!-- Login page structure -->
<view class="container">
  <view class="login-container">
    <view class="login-header">
      <text class="login-title">Welcome</text>
      <text class="login-subtitle">Please sign in to continue</text>
    </view>

    <!-- WeChat Authorization Login Button -->
    <button 
      class="wechat-login-button" 
      bindtap="onWeChatAuthLogin"
      hover-class="button-hover"
      loading="{{wechatAuthLoading}}"
      disabled="{{wechatAuthLoading}}"
    >
      <image class="wechat-icon" src="/images/wechat_icon.png" mode="aspectFit" />
      <text class="wechat-login-text">Login with WeChat</text>
    </button>

    <!-- Instructional text for WeChat login -->
    <view class="instruction-text">
      <text>Tapping above will prompt for profile access. Please allow access to login with your WeChat profile.</text>
    </view>
  </view>
</view>