/* Checkout page styles */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.checkout-header {
  text-align: center;
  padding: 30rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.order-summary {
  padding: 20rpx 0;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-total {
  font-size: 32rpx;
  font-weight: bold;
  color: #e64340;
  text-align: right;
  padding: 20rpx 0;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-row {
  display: flex;
  justify-content: space-between;
}

.form-group.half {
  width: 48%;
}

.payment-methods {
  padding: 20rpx 0;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.radio-item radio {
  margin-right: 20rpx;
}

.terms-section {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  cursor: pointer;
  user-select: none;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 20rpx 0;
}

.terms-section checkbox {
  margin-right: 20rpx;
  position: relative;
  z-index: 1;
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  flex-shrink: 0;
}

.checkbox-item {
  display: flex;
  align-items: center;
}

.checkbox-item checkbox {
  margin-right: 20rpx;
}

.footer {
  padding: 30rpx 0;
  text-align: center;
}

.place-order-btn {
  width: 100%;
  height: 80rpx;
  background-color: #e64340;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.place-order-btn[disabled] {
  background-color: #ccc;
}

.section button {
  width: 100%;
  height: 80rpx;
  background-color: #1aad19;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.section button:last-child {
  margin-bottom: 0;
}

.button-primary {
  background-color: #e64340;
  color: white;
}

.button-primary[disabled] {
  background-color: #ccc;
}